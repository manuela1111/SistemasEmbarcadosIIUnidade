#include <iostream>
#include "Comunicacao.h"

using namespace std;

struct InfoRF{
  short id; //o int do arduino é short
  short batimentos;
  short temperatura;
  boolean movimento;
}infoRF;


int main(char **argv, int argc){

	//criar uma instancia da classe de comunicação
	#ifdef __linux__
		Comunicacao com = Comunicacao("/dev/ttyACM0");
	#endif
	#ifdef _WIN32 || _WIN64
		Comunicacao com = Comunicacao("COM6");
	#endif

		infoRF info = {0}; //coloca zero para todas as posições
		while(true){
			resultado = com.ler((char*)&info, sizeof(infoRF));
			Sleep(50);
		}

		Sleep(50);
	return 0;
}


